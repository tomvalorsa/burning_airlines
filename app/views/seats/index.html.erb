<p id="notice"><%= notice %></p>

<h1>Listing Seats</h1>

<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Row</th>
      <th>Column</th>
      <th>Reserved</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seats.each do |seat| %>
      <tr>
        <td><%= seat.flight_id %></td>
        <td><%= seat.row %></td>
        <td><%= seat.column %></td>
        <td><%= seat.reserved %></td>
        <td><%= seat.user_id %></td>
        <td><%= link_to 'Show', seat %></td>
        <td><%= link_to 'Edit', edit_seat_path(seat) %></td>
        <td><%= link_to 'Destroy', seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

