<div class="error"><%= flash[:error] if flash[:error].present? %></div>
<%= form_tag login_path, :class => 'pure-form pure-form-aligned' do %>
  <fieldset>
    <div class="pure-control-group">
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, :autofocus => true, :required => true, :placeholder => 'Email' %>
    </div>
    <div class="pure-control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :required => true, :placeholder => 'Password' %>
    </div>
    <div class="pure-controls">
      <%= submit_tag 'Login', :class => 'pure-button pure-button-primary' %>
    </div>
  <fieldset>
<% end %>