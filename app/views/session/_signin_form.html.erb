<div class="error"><%= flash[:error] if flash[:error].present? %></div>
<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, :autofocus => true, :required => true, :placeholder => 'Email' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :required => true, :placeholder => 'Password' %>
  </div>
  <div class="form-group">
    <%= submit_tag 'Sign in' %>
  </div>
<% end %>